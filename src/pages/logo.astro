---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Logo - Nils Beerten" class="bg-stone-900">
    <div class="grid w-full grid-flow-row place-content-center gap-32 bg-transparent">
        <div
            class="grid h-[500px] w-[500px] place-content-center overflow-hidden rounded-[5rem] bg-stone-950"
            id="logo1">
            <h1
                class="-ml-[10px] font-display text-[300px] font-black tracking-tighter text-amber-100">
                nb
            </h1>
        </div>

        <div
            class="grid h-[500px] w-[500px] place-content-center overflow-hidden rounded-full bg-stone-950"
            id="logo2">
            <h1
                class="-ml-[12px] mb-[30px] font-display text-[250px] font-black tracking-tighter text-amber-100">
                nb
            </h1>
        </div>
    </div>
</Layout>
